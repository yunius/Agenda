{% extends "layout.html.twig" %}

{% block title %}Description de la Collective{% endblock %}

{% block content %}
    
    <div class="container monContenu">
        <div class="row section">
            <div class="col-md-2">{{ collective.typeActivite.activiteLibelle }}</div>

            <div class="col-md-6">
                <div class="row">{{collective.collTitre}}</div>
                <div class="row">{{collective.objectif.objectifLibelle}}</div>
                <div class="row">{{collective.objectif.secteur.secteurLibelle}}</div>
                
                {% if collective.collDateFin is not null%}
                    <div class="row">{{collective.collDateDebut}} - {{collective.collDateFin}}</div>
                {% else %}
                    <div class="row">{{collective.collDateDebut}}</div>
                {% endif %}
                
                <div class="row">Observation : <br />
                    <p>{{collective.collObservations}}</p>
                </div>

            </div>
            <div class="col-md-4">
                <div class="row"><h2>{{collective.adherent.prenomAdherent}} {{collective.adherent.nomAdherent}}</h2></div>
                <div class="row">
                    {% for cotation in cotations %}
                    <div class="col-md-3">difficulté {{cotation.cotation.LibelleCotation}}<br />{{cotation.cotation.valeurCotation}}</div>                    
                    {% endfor %}
                </div>
                <div class="row">Denivelé : {{collective.collDenivele}}m</div>
                {% if collective.collNbLongueurs is not null %}
                <div class="row">Nombre de longueur : {{collective.collNbLongueurs}}</div>
                {% endif %}
            </div>

        </div>
        <div class="row section">
            <div class="col-md-2"></div>

            <div class="col-md-8">
                <div class="row">MATERIEL</div>
                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-8">
                        <div class="row">
                            {% for materiel in listemateriel %}
                            <div class="col-md-6">{{ materiel.TypeMateriel.typeMatLibelle }}</div>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="col-md-2"></div>
                    
                    
                </div>
                <div class="row">materiel texte</div>
            </div>

            <div class="col-md-2"></div>

        </div>
        <div class="row section">

            <div class="col-md-1"></div>

            <div class="col-md-10">

                <div class="row">
                   <div class="col-md-4">resumé</div>
                   <div class="col-md-4">PARTICIPANTS</div>
                   <div class="col-md-4"></div> 
                </div>

                <div class="row">
                   <div class="col-md-4">
                       <div class="row">encadrants :</div>
                       <div class="row">encadrant</div>
                       <div class="row">coencadrant</div>
                   </div>
                    <div class="col-md-4">
                       <div class="row">Participants validé :</div>
                       {% for participant in participantValide %}
                           <div class="row"> - {{ participant.adherent.prenomAdherent }} {{ participant.adherent.nomAdherent }}</div>
                       {% endfor %}
                           
                    </div>
                       
                    <div class="col-md-4">
                        <div class="row">Liste d'attente :</div>
                        {% for participant in listeAttente %}
                           <div class="row"> - {{ participant.adherent.prenomAdherent }} {{ participant.adherent.nomAdherent }}</div>
                        {% endfor %}
                    </div> 
                </div>

            </div>

            <div class="col-md-1"></div>

        </div>
        <div class="row section">
            <div class="col-md-1"></div>
            <div class="col-md-10">
                <div class="row">INSCRIPTION</div>

                <div class="row">
                    <div class="col-md-1"></div>
                    <div class="col-md-5">
                        <div class="row">rendez-vous :</div>
                        {% for rdv in collective.rdv %}  
                        <div class="row">{{loop.index}}: {{ rdv.heureRDV }} - {{ rdv.lieu.lieuLibelle }}</div>
                        {% endfor %}
                    </div>
                    <div class="col-md-5">Commentaire<br />
                        {% if commentForm %}
                            {{ form_start(commentForm) }}
                                <div class="form-group">
                                    {{ form_errors(commentForm.contenu) }}
                                    {{ form_widget(commentForm.contenu, { 'attr':  {
                                        'rows': '4',
                                        'class': 'form-control',
                                        'placeholder': 'entrez un commentaire'
                                    }}) }}
                                </div>
                                <div class="form-group">
                                    <input type="submit" class="btn btn-primary" value="envoyer" />
                                </div>
                            {{ form_end(commentForm) }}
                        {% else %}
                            <a href="{{ path('login')}}">Connectez-vous</a> pour ajouter un commentaire 
                        {% endif %}
                    </div>
                    <div class="col-md-1"></div>                
                </div>

                <div class="row">JE M'INSCRIS</div>
            </div>
            <div class="col-md-1"></div>
        </div>
    </div>
                    
    <div class="container monContenu">
        <div class="row">Les commentaires</div>
        {% for commentaire in commentaires %}
        <div class="row">
            <div class="col-md-2">{{ commentaire.adherent.prenomAdherent }}</div>
            <div class="col-md-8">{{ commentaire.contenu }}</div>
            <div class="col-md-2">{{ commentaire.comhorodateur}}</div>            
        </div>
        {% endfor %}
    </div>
    
{% endblock %}
